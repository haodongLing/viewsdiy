<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.haodong.viewday1.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:myText="美滋滋美滋滋" />

    <com.example.haodong.viewday1.day4.ColorTrackTextView
        android:id="@+id/color_track_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world"
        android:textSize="20sp"
        app:changeColor="@color/colorAccent"
        app:originColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_colorTrack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="start change"
        android:textAllCaps="false" />
    <com.example.haodong.viewday1.day4.MyCircleScheduleView
        android:id="@+id/myCircleView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:myNormalColor="@color/colorPrimary"
        app:myScheduledColor="@color/colorAccent"
        app:myTxtSize="15sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn2"
        android:text="click"/>

</LinearLayout>