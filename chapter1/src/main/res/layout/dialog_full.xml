<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".electric.ablm.dialog.FullPreviewDialog">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <SurfaceView
            android:id="@+id/dialog_full_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.chapter1.electric.ablm.tools.GradientTextView
            android:id="@+id/tv1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Premium Membership"
            android:textAllCaps="false"
            android:textSize="32sp" />

        <com.example.chapter1.electric.ablm.tools.GradientTextView
            android:id="@+id/tv2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Unlock for FREE"
            android:textAllCaps="false"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#BFBFBF"
            android:text="Enliven your photo with stunning "
           />
        <TextView
            android:id="@+id/tv4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#BFBFBF"
            android:text="visual effects"
            />
        <TextView
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_52"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/dialog_start_sel"
            android:text="START"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/btn_not_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_52"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/dialog_not_now_sel"
            android:text="NOT NOW"
            android:textSize="23sp"
            android:textColor="#333642"
            />
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>