<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top" />
    <!--文字-->
    <TextView
        android:id="@+id/preview_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="lalldf"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <!--头像-->
    <ImageView
        android:id="@+id/preview_avator"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_default_avator" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_layout_bg" />
    <ImageView
        android:id="@+id/preview_img_deline"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_deline" />
    <com.example.haodong.customui.iphone.HorizontalSlipView
        android:id="@+id/preview_layout_slide"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/ic_box"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_slide"/>
        <com.example.haodong.customui.iphone.FlickerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:shadowDx="3"
            android:shadowDy="6"
            android:shadowRadius="5"
            android:text="slide to anwer"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </com.example.haodong.customui.iphone.HorizontalSlipView>
</RelativeLayout>