<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--name最好是自定义View的名字-->
    <declare-styleable name="MyTextView">
        <!--name:名称；format:格式-->
        <!--字体大小，宽高 ：dimension-->
        <!--reference :资源的引用-->
        <attr name="myText" format="string" />
        <attr name="myColor" format="color" />
        <attr name="myTextSize" format="dimension" />
        <attr name="myBackground" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="QQStepView">
        <attr name="stepOuterColor" format="color" />
        <attr name="stepInnerColor" format="color" />
        <attr name="stepBorderWidth" format="dimension" />
        <attr name="stepFontSize" format="dimension" />
        <attr name="stepFontColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>
    <declare-styleable name="MyCircleScheduleView">
        <attr name="myNormalColor" format="color" />
        <attr name="myScheduledColor" format="color" />
        <attr name="myTxtSize" format="dimension" />
        <attr name="myStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MySlidingMenu">
        <attr name="menuRightMargin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="GetCoinProgressView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="isNeedAnim" format="boolean"/>
        <attr name="bgColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="topGradColor" format="color"/>
        <attr name="bottomGradColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ShapeImageView">
        <attr name="siv_border_width" format="dimension"/>
        <attr name="siv_border_color" format="color"/>
        <attr name="siv_fill_color" format="color"/>
        <attr name="siv_border_overlay" format="boolean"/>
        <attr name="siv_shape_type" format="integer"/>
        <attr name="siv_round_radius" format="dimension"/>
    </declare-styleable>
    <attr name="sr_style" format="enum">
        <enum name="style_default" value="0" />
        <enum name="style_scale" value="1" />
        <enum name="style_pin" value="2" />
        <enum name="style_followScale" value="3" />
        <enum name="style_followPin" value="4" />
        <enum name="style_followCenter" value="5" />
    </attr>

    <declare-styleable name="SmoothRefreshLayout">
        <attr name="android:enabled" />
        <attr name="sr_content" format="reference" />
        <attr name="sr_resistance" format="float" />
        <attr name="sr_resistanceOfFooter" format="float" />
        <attr name="sr_resistanceOfHeader" format="float" />
        <attr name="sr_ratioToRefresh" format="float" />
        <attr name="sr_ratioOfHeaderToRefresh" format="float" />
        <attr name="sr_ratioOfFooterToRefresh" format="float" />
        <attr name="sr_ratioToKeep" format="float" />
        <attr name="sr_ratioToKeepHeader" format="float" />
        <attr name="sr_ratioToKeepFooter" format="float" />
        <attr name="sr_maxMoveRatio" format="float" />
        <attr name="sr_maxMoveRatioOfHeader" format="float" />
        <attr name="sr_maxMoveRatioOfFooter" format="float" />
        <attr name="sr_closeDuration" format="integer" />
        <attr name="sr_closeHeaderDuration" format="integer" />
        <attr name="sr_closeFooterDuration" format="integer" />
        <attr name="sr_backToKeepDuration" format="integer" />
        <attr name="sr_backToKeepHeaderDuration" format="integer" />
        <attr name="sr_backToKeepFooterDuration" format="integer" />
        <attr name="sr_enablePullToRefresh" format="boolean" />
        <attr name="sr_enableKeep" format="boolean" />
        <attr name="sr_enableOverScroll" format="boolean" />
        <attr name="sr_enablePinContent" format="boolean" />
        <attr name="sr_enableRefresh" format="boolean" />
        <attr name="sr_enableLoadMore" format="boolean" />
        <attr name="sr_stickyHeader" format="reference" />
        <attr name="sr_stickyFooter" format="reference" />
        <attr name="sr_mode" format="enum">
            <enum name="mode_default" value="0" />
            <enum name="mode_scale" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="SmoothRefreshLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>
    <declare-styleable name="IRefreshView">
        <attr name="sr_style" />
    </declare-styleable>

    <declare-styleable name="CustomRoundLayout">
        <attr name="crl_bg_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="circleStartColor" format="color|reference"/>
        <attr name="circleEndColor" format="color|reference"/>
        <attr name="circleArcWidth" format="integer|reference"/>
        <attr name="circleArcRadian" format="integer|reference"/>
        <attr name="circleArcSpacing" format="integer|reference"/>
    </declare-styleable>
</resources>